<div class="banner">
<%= render "shared/homepage_navbar" %>
  <div class="container text-center">
    <h1>AnimaLib</h1>
    <p class="slogan mb-5">Your pets first</p>
    <%= render partial: "shared/searchbar" %>
  </div>
</div>

<div class="container text-center mt-4">
  <div class="text">
    <h1> <strong>Animalib, </strong></h1>
    <h3> The easiest way to book professionals dedicated to your pets</h3>
  </div>
  <div class="icons d-flex justify-content-around py-4">

    <%= link_to profile_path do %>
      <i class="fa-solid fa-book-medical icon-size"></i>
    <% end %>
    <%= link_to profile_path do %>
      <i class="fa-solid fa-calendar-check icon-size"></i>
    <% end %>
    <%= link_to profile_path do %>
      <i class="fa-solid fa-dog icon-size"></i>
    <% end %>
  </div>
</div>


<div id="carouselExampleCaptions" class="carousel slide my-5" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button"  data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active px-5" data-bs-slide-to="1">
       <%= image_tag "prunelle.png", class: "d-block w-100  rounded-circle", data_bs_interval:"2000", alt: "veterinarian" %>
      <div class="carousel-caption d-none d-md-block">
        <div class="text-carousel">
          <h2><em>" Simple, useful. Perfect! "</em></h2>
          <p>Prunelle</p>
        </div>
      </div>
    </div>
    <div class="carousel-item px-5" data-bs-slide-to="2">
       <%= image_tag "dylan.jpeg", class: "d-block w-100  rounded-circle", data_bs_interval:"2000", alt: "veterinarian" %>
      <div class="carousel-caption d-none d-md-block">
        <div class="text-carousel">
         <h2><em>" Simple, useful. Perfect! "</em></h2>
         <p>Dylan</p>
        </div>
      </div>
    </div>
    <div class="carousel-item px-5" data-bs-slide-to="3">
      <%= image_tag "srivani.png", class: "d-block w-100  rounded-circle", data_bs_interval:"2000", alt: "veterinarian" %>
      <div class="carousel-caption d-none d-md-block">
        <div class="text-carousel">
          <h2><em>" Simple, useful. Perfect! "</em></h2>
          <p>Srivani</p>
        </div>
      </div>
    </div>
    <div class="carousel-item px-5" data-bs-slide-to="0">
      <%= image_tag "veterinaire.png", class: "d-block w-100  rounded-circle", data_bs_interval:"2000", alt: "veterinarian" %>
      <div class="carousel-caption d-none d-md-block">
        <div class="text-carousel">
          <h2><em>" Simple, useful. Perfect! "</em></h2>
          <p>Victor</p>
        </div>
      </div>
    </div>
  </div>


  <button class="carousel-control-prev pe-4" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next ps-4" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
