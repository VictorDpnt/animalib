
<div class="animal-container">
  <div class="header-animal-container">
  <%= link_to animal_path(@animal), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
    <i class='fa-solid fa-trash-can trash'></i>
  <% end %>

    <div class="img-container">
      <%= image_tag "Avatar_animal" %>
    </div>
  <div class="infos-animal">
    <p class="name"><%= @animal.name.capitalize %></p>
    <div class="desc-animal">
      <p><%= @animal.specie.capitalize %> </p>
      <p> <%= @animal.breed.capitalize %> </p>
      <p> <%= @animal.age %> Years Old</p>
    </div>
  </div>
  <div class="pages-containt">
    <p><i class="fa-solid fa-book-medical"></i> Health Records</p>
    <p class="underline"><i class="fa-solid fa-calendar-check"></i> Bookings</p>
    <p><i class="fa-solid fa-file"></i> Documents</p>
    <p><i class="fa-solid fa-folder-plus" ></i> <%= link_to 'Add an event', new_animal_health_record_path(@animal) %></p>
  </div>
</div>

</div>
