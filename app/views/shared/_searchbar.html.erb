<div class="row justify-content-center">
  <div class="col-sm-8 my-3 form-outline" data-mdb-input-init>
    <%= form_with url: users_path, method: :get, class: "d-flex" do %>
      <% icon = "<i class='fa-solid fa-magnifying-glass'></i>" %>
      <%= text_field_tag :query,
          params[:query],
          class: "form-control nav border border-light border-3 border-end-0",
          placeholder: "Find your professional"
      %>
    <%= submit_tag "Search", name: "", class: "btn btn-dark rounded-right border border-light border-3 nav-btn" %>
    <% end %>
  </div>
</div>
