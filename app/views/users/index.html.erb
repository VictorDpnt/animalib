<div class="container big-container">

  <div class="pro-cards-container">
    <% @professionals.each do |pro| %>
      <div class="card-pro">
        <div class="infos">
          <%= pro.company_name %>
          <%= pro.first_name %>
          <%= pro.profession.capitalize %>
          <%= pro.address.capitalize %>
          <%= pro.phone_number %>
        </div>

        <div class="agenda">

        </div>

      </div>
    <% end %>
  </div>


  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>
