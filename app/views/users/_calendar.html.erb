<div class="container">
  <div class="souscontainer">
    <% @slots.each do |day_data| %>
      <div class="slotcontainer">
        <div class="days"> <strong><%= day_data[:date].strftime("%a %e %b") %></strong></div>
        <% day_data[:slots].first(5).each do |slot_data| %>
          <% if slot_data[:available] %>
            <div class="availableslots">
              <% min = slot_data[:slot].start.to_s.match(/(\d{2})$/)&.captures&.first %>
              <% hour = slot_data[:slot].start.to_s.gsub(/(\d{2})$/, "") %>
              <% datetime = Time.parse("#{day_data[:date].to_s} #{hour}:#{min}") %>
              <%= link_to "#{hour}:#{min}", new_user_booking_path(@professional, date: datetime), class: "availableslots" %>
            </div>
          <% else %>
            <div>-</div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
